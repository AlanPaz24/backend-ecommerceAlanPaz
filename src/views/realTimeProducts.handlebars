<h1>Productos en tiempo real</h1>

<ul id="productList">
  {{#each products}}
    <li>
      {{this.title}} - ${{this.price}}
      <button onclick="deleteProduct('{{this.id}}')">Eliminar</button>
    </li>
  {{/each}}
</ul>

<h1>Productos en Tiempo Real</h1>

<form id="product-form">
  <input type="text" name="title" placeholder="Título" required>
  <input type="text" name="description" placeholder="Descripción" required>
  <input type="text" name="code" placeholder="Código" required>
  <input type="number" name="price" placeholder="Precio" required>
  <input type="number" name="stock" placeholder="Stock" required>
  <input type="text" name="category" placeholder="Categoría" required>
  <input type="text" name="thumbnails" placeholder="Imágenes (separadas por coma)">
  <button type="submit">Agregar Producto</button>
</form>

<ul id="product-list">
  {{#each products}}
    <li data-id="{{this._id}}">
      <strong>{{this.title}}</strong> - ${{this.price}}
      <button onclick="deleteProduct('{{this._id}}')">Eliminar</button>
    </li>
  {{/each}}
</ul>

