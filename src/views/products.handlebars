<h1>Productos</h1>

<ul>
  {{#each products}}
    <li>
      <strong>{{this.title}}</strong> - ${{this.price}}<br>
      {{this.description}}<br>

      <!-- Formulario para agregar producto al carrito -->
      <form action="/api/carts/{{../cartId}}/product/{{this._id}}" method="POST">
        <button type="submit">Agregar al carrito</button>
      </form>
    </li>
    <hr>
  {{/each}}
</ul>

